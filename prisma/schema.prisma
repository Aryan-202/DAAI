generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String
  username     String        @unique
  image        String
  password     String
  excelSheets  ExcelSheet[]
  googleSheets GoogleSheet[]
  zohoSheets   ZohoSheet[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model ExcelSheet {
  id        String   @id @default(uuid())
  name      String
  url       String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GoogleSheet {
  id        String   @id @default(uuid())
  name      String
  url       String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ZohoSheet {
  id        String   @id @default(uuid())
  name      String
  url       String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
